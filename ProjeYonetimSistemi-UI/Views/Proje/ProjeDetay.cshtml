
@{
    ViewBag.Title = "ProjeDetay";
}
@section head{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
}

@model  Entity.EntityFramework.Proje
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Proje Detay
            </header>
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Gorev/Gorevler/@Model.ProjeID" class="btn btn-success">
                        Gorevler <i class="icon-plus"></i>
                    </a>

                </div>

            </div>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Proje/ProjeGuncelle" method="post">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Proje Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="ProjeAdi" value="@Model.ProjeAdi">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="l-name" class="form-control" name="Aciklama" value="@Model.Aciklama">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Oluşturan</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="l-name" class="form-control" name="Olusturan" value="@Model.Olusturan">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Tarih</label>
                        <div class="col-lg-10">
                            <input type="datetime" placeholder="" id="TransDate" class="datepicker" name="KayitTarih" value="@Model.KayitTarih">

                        </div>
                    </div>
                    <input type="hidden" name="ProjeID" value="@Model.ProjeID" />


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save Changes</button>
                        </div><br />
                        <div class="col-lg-offset-2 col-lg-10">
                            <td><a class="btn btn-danger" href="/Proje/ProjeDelete/@Model.ProjeID"><i class="icon-pencil">Delete</i></a></td>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function myfunction() {
            $('#TransDate').datepicker({
                dateFormat: "dd/mm/yy"
            });
        });
    </script>
}