    $(document).ready(function myfunction() {
        $('.datepicker').datepicker({
            dateFormat: "dd/mm/yy"
    
        });
        $('#checkDate').bind('click', function () {
            var myDAte = $('.datepicker').datepicker("getDate");
            var curDate = new Date();

            if (curDate > myDAte) {
                alert('Uyarı !! lütfen daha büyük  tarih girin');
            }
            else {
                alert('Uygun');
            }
           
        });
    });
</script>
